{
  "manifest_version": 3,
  "name": "Zeroutine Extension",
  "version": "1.0",
  "description": "AI-powered browser automation and intelligent web agent",
  "permissions": ["activeTab", "scripting", "storage", "alarms", "webNavigation"],
  "action": {
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": ["<all_urls>"]
}